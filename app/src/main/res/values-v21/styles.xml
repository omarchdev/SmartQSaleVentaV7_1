<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ButtonStyleVar">
        <item name="android:layout_margin">4dp</item>
        <item name="android:drawableTint">#898989</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:backgroundTint">@drawable/fondo_buttons</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="TitleApparence">
        <item name="android:textColor">
            #ffffff
        </item>
        <item name="android:backgroundTint">
            #ffffff
        </item>

    </style>

    <style name="ButtonOkDialog">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>

    </style>

    <style name="EditTextHint" parent="@android:style/TextAppearance">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColor">@drawable/edit_text_color</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:textColorHint">@drawable/edit_text_color</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorPrimaryDisableOnly">@android:color/white</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="MyTimePickerDialogStyle" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="showTitle">false</item>
        <item name="colorControlActivated">#ffd600</item>
        <item name="colorAccent">#b71c1c</item>
        <item name="android:textColorPrimary">#43a047</item>
        <item name="android:textColorSecondary">#f44336</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/Theme.Design.BottomSheetDialog</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@drawable/edit_text_color</item>
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="android:textColorHint">@drawable/edit_text_color</item>
        <item name="android:editTextStyle">@style/EditTextHint</item>

        <item name="searchViewStyle">@style/MySearchViewStyle</item>

    </style>

</resources>