<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">


        <LinearLayout
            android:layout_above="@id/contentButton"
            android:orientation="vertical"
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnEliminarZona"
                android:drawableRight="@drawable/ic_delete_white_24dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:drawablePadding="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar Seleccion      "
                />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_zonas_servicios"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:gravity="right"
            android:orientation="horizontal"
            android:id="@+id/contentButton"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnSalir"
                android:text="Salir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button

                style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                android:id="@+id/btnGuardar"
                android:text="Seleccionar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>