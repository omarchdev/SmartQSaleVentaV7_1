<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/rlItemVariante"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp">


    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/txtNombreVariante"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:text="42/Rojo/algodonPolye" />

    <TextView
        android:gravity="center"
        android:id="@+id/txtPv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtNombreVariante"
        android:layout_marginEnd="1dp"
        android:text="100.00" />

    <TextView
        android:id="@+id/txtPc"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtPv"
        android:layout_alignBottom="@+id/txtPv"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/txtPv"
        android:gravity="center"
        android:text="100.00" />
    <TextView
        android:id="@+id/edtStock"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
        android:layout_alignBaseline="@+id/txtPc"
        android:layout_alignBottom="@+id/txtPc"
        android:layout_toStartOf="@+id/txtPc"
        android:gravity="center"
        android:text="100.00" />
    <LinearLayout
        android:background="#bfbfbf"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></LinearLayout>
</RelativeLayout>