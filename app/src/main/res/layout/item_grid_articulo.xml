<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

       <RelativeLayout
           android:layout_margin="2dp"
           android:layout_gravity="center"
              android:id="@+id/contentProducto"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="#949494"
            android:orientation="vertical"
            android:padding="0.1dp">

            <TextView
                android:id="@+id/txtCantidadProducto"
                android:textStyle="bold"
                android:elevation="1dp"
                android:textColor="#ffffff"
                android:background="#C4EF5350"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="x5"
                android:visibility="visible"
                />

            <ImageView

                android:id="@+id/imageArticuloGrid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/atom" />

            <TextView

                android:layout_alignParentBottom="true"
                android:id="@+id/txtNombreArticuloGrid"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:background="#96000000"
                android:gravity="center"
                android:maxLines="4"
                android:text="TextView"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <ImageView
                android:visibility="invisible"
                android:tint="#C4EF5350"
                android:id="@+id/imageCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/imageArticuloGrid"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/ic_check_black_36dp" />

        </RelativeLayout>



</FrameLayout>