<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:id="@+id/rlItemVariante">

    <TextView
        android:id="@+id/txtNombreVariante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:text="Nombre compuesto de la variante" />


    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/txtPVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
         android:gravity="center"
        android:text="00.00" />

    <TextView

        android:id="@+id/txtPCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/txtNombreVariante"
        android:layout_alignBottom="@+id/txtNombreVariante"
        android:layout_marginEnd="40dp"
        android:layout_toStartOf="@+id/txtPVenta"
        android:text="00.00" />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/contenedor"
        android:orientation="horizontal"
        android:layout_below="@+id/txtNombreVariante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="PrcCompra" />
            <EditText
                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/edtPrecioCompra"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView

                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Precio Venta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText

                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:textSize="15sp"
                android:id="@+id/edtPrecioVenta"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" /></LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:layout_margin="1dp"
                android:gravity="center"
                android:text="Codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <EditText

                android:backgroundTint="@color/colorAccent"
                android:gravity="center"
                android:textSize="15sp"
                android:text="1234567891234"
                android:id="@+id/edtCodigoProducto"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:background="#898989"
        android:layout_below="@id/contenedor"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:id="@+id/linearLayout4"></LinearLayout>
    
</RelativeLayout>