<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical">
        <LinearLayout
            android:background="#e9e9e9"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="center|left">

            <ImageView
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_back_simple" />
            <EditText
                android:textStyle="bold"
                android:hint="Buscar Vendedores"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/edtBusquedaVendedorEnVenta"
                />
            <Button
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="AÃ±adir Vendedor"
                android:backgroundTint="#ffa03b"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <ListView

            android:id="@+id/listViewVendedoresEnVenta"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>