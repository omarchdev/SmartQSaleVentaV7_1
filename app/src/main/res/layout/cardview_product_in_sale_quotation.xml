<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvProduct_in_sale_quotation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"

    android:clickable="true"
    android:layout_marginBottom="0.5dp"

    >

    <LinearLayout
        android:id="@+id/llayoutCardViewProductInCarSale"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/color_text_label"
                android:id="@+id/productNameInSale"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:gravity="center|left"
                android:padding="5dp"
                android:paddingLeft="10dp"
                android:soundEffectsEnabled="true"
                android:text="Nombre Producto"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:textColor="@color/color_text_label"
                android:id="@+id/txtCombo"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:textColor="@color/color_text_label"
            android:id="@+id/quantityInSale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:text="x0"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView

            android:textColor="@color/color_text_label"
            android:id="@+id/priceInSale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="S/100.00"
            android:textStyle="bold" />

        <ImageButton
            android:textColor="@color/color_text_label"
            android:id="@+id/deleteInSale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:padding="20dp"
            android:src="@drawable/ic_delete_white_18dp" />
    </LinearLayout>
    <LinearLayout
        android:background="#e7e6e6"
        android:layout_below="@id/llayoutCardViewProductInCarSale"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"></LinearLayout>

</RelativeLayout>