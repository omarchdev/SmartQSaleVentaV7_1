<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ConfiguracionAlmacen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"

        android:elevation="2dp"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.024">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:id="@+id/edtNombreAlmacen"
            app:counterEnabled="true"
            app:counterMaxLength="30"
            app:errorEnabled="true">


            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del almacén" />
        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/txtSeleccionTienda"
            android:padding="4dp"
            android:textStyle="bold"
            android:text="Asigne una tienda al almacén"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <FrameLayout
            android:id="@+id/content_tienda"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></FrameLayout>

        <CheckBox
            android:id="@+id/cbAlmacenP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Almacén principal" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>