<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_margin="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre del Cliente"
        android:textSize="15dp"
        />

    <TextView
        android:id="@+id/txtDetailClientNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nombre Cliente"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dce1e1e1"></LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alias"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/txtDetailClientAlias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alias"
        android:textSize="20sp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dce1e1e1"></LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="Direccion"
        android:textSize="15sp"
        />
    <TextView
        android:id="@+id/txtDetailDireccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Direccion"
        android:textSize="20sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dce1e1e1"></LinearLayout>

    <Button
        android:id="@+id/btnCallFirstNumber"
        style="?android:attr/imageButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:background="#00aeff"
        android:drawableLeft="@android:drawable/ic_menu_call"
        android:padding="5dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnSendEmail"
        android:background="#00aeff"
        android:visibility="gone"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:drawableLeft="@android:drawable/ic_dialog_email" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >

        <Button
            android:textColor="#ffffff"
            android:id="@+id/btnCloseDialogDetailCliente"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:gravity="center"
            android:backgroundTint="#ff0804"
            android:text="Cerrar"
            android:drawableLeft="@drawable/ic_close_white_24dp"
            android:elevation="5dp" />

        <Button
            android:elevation="5dp"
            android:id="@+id/btnEditCliente"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:backgroundTint="#00aeff"
            android:drawableLeft="@drawable/pencil_edit"
            android:padding="5dp"
            android:text="Editar"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>