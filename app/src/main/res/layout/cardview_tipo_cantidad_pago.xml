<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    app:cardBackgroundColor="@color/color_Fondo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtTipoPago"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="TipoPago"

            android:textSize="19sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/txtMontoCancelado"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="S/1000.00"

            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDeleteTipoPago"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/ic_delete_white_18dp" />


    </LinearLayout>

</androidx.appcompat.widget.CardView>