<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.omarchdev.smartqsale.smartqsaleventas.Activitys.ActivityPagoCtaCte">

    <Button
        android:id="@+id/btnIngresarMonto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/colorPrimary"

        android:text="Ingresar monto "
        android:textColor="#ffffff"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/spn_Medio_Pago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMonto"
        android:layout_marginTop="31dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edtObservacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spn_Medio_Pago"
        android:layout_below="@+id/spn_Medio_Pago"
        android:layout_marginTop="36dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/edtObservacion"
            android:hint="Observacion" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnConfirmarPago"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnSeleccionarFecha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/colorPrimary"
        android:elevation="10dp"
        android:text="Confirmar pago"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txtMonto"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:background="#333333"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:textColor="#23d929"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnSeleccionarFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtObservacion"
        android:layout_marginTop="16dp"

        android:text="Seleccionar fecha" />


</RelativeLayout>
